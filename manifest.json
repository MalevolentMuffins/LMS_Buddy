{
  "manifest_version": 3,
  "name": "LMS Buddy",
  "version": "2.1.0",
  "description": "This extension extracts questions and multiple-choice answers from web pages and allows users to input letters to automatically select or fill in answers.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bcpeducollege.elearningcommons.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"  
  }
}
